{{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="form-group">
        {{ form_label(form.category) }}
        {{ form_widget(form.category) }}
        <div class="text-danger">{{ form_errors(form.category) }}</div>
    </div>
    <div class="form-group">
        {{ form_label(form.title_fr) }}
        {{ form_widget(form.title_fr) }}
        <div class="text-danger">{{ form_errors(form.title_fr) }}</div>
    </div>
    <div class="form-group">
        {{ form_label(form.title_en) }}
        {{ form_widget(form.title_en) }}
        <div class="text-danger">{{ form_errors(form.title_en) }}</div>
    </div>
    <div class="form-group">
        {{ form_label(form.image) }}
        {{ form_widget(form.image) }}
        <div class="text-danger">{{ form_errors(form.image) }}</div>
        {% if article.image is not null %}
            <img src="{{ asset(article.fullPathImage) }}" alt="Image de l'article">
        {% endif %}
    </div>
    <div class="form-group">
        {{ form_label(form.content_fr) }}
        {{ form_widget(form.content_fr) }}
        <div class="text-danger">{{ form_errors(form.content_fr) }}</div>
    </div>
    <div class="form-group">
        {{ form_label(form.content_en) }}
        {{ form_widget(form.content_en) }}
        <div class="text-danger">{{ form_errors(form.content_en) }}</div>
    </div>
    <br/>
    <a class="btn-cancel btn mt-2 rounded-3" href="{{ path('app_article_list') }}">{{ 'cancel'|trans({}, 'actions') }}</a>
    {% if article.id is not null %}
        <button type="submit" class="btn-update btn mt-2 rounded-3">{{ 'edit'|trans({}, 'actions') }}</button>
    {% else %}
        <button type="submit" class="btn-add btn mt-2 rounded-3">{{ 'add'|trans({}, 'actions') }}</button>
    {% endif %}
{{ form_end(form) }}