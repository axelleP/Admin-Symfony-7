{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Vue article{% endblock %}

{% block body %}
    <table class="table table-responsive table-bordered w-auto">
        <tbody>
            <tr>
                <th class="table-secondary">{{ 'category'|trans({}, 'article') }}</td>
                <td>{{ article.category.nameFr }}</td>
            </tr>
            <tr>
                <th class="table-secondary">{{ 'creation_date'|trans({}, 'article') }}</td>
                <td>{{ article.createdAt|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th class="table-secondary">{{ 'title_fr'|trans({}, 'article') }}</td>
                <td>{{ article.titleFr }}</td>
            </tr>
            <tr>
                <th class="table-secondary">{{ 'title_en'|trans({}, 'article') }}</td>
                <td>{{ article.titleEn }}</td>
            </tr>
            <tr>
                <th class="table-secondary">{{ 'content_fr'|trans({}, 'article') }}</td>
                <td>{{ article.contentFr|nl2br|raw }}</td>
            </tr>
            <tr>
                <th class="table-secondary">{{ 'content_en'|trans({}, 'article') }}</td>
                <td>{{ article.contentEn|nl2br|raw }}</td>
            </tr>
            <tr>
                <th class="table-secondary">{{ 'image'|trans({}, 'article') }}</td>
                    <td><img src="{{ asset(article.fullPathImage) }}"></td>
            </tr>
        </tbody>
    </table>
    <a class="btn-back btn mt-2 rounded-3" href="{{ path('app_article_list') }}">{{ 'back'|trans({}, 'actions') }}</a>
{% endblock %}




