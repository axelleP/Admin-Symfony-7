{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Liste pages générales{% endblock %}

{% block body %}
    <table class="table table-responsive table-bordered w-auto">
        <thead class="table-secondary">
            <tr>
                <th scope="col">Page</th>
                <th scope="col">-</th>
                <th scope="col">-</th>
            </tr>
        </thead>
        <tbody>
            {% for page in pages %}
                <tr>
                    <td>{{ page.code|trans({}, 'page') }}</td>
                    <td><a class="btn btn-link" href="{{ path('app_general_page_show', {id: page.id}) }}"><img class="icon-action-size" src="{{ asset('img/btn-see.svg') }}" alt="btn-see"/></a></td>
                    <td><a class="btn btn-link"  href="{{ path('app_general_page_edit', {id: page.id}) }}"><img class="icon-action-size" src="{{ asset('img/btn-edit.svg') }}" alt="btn-edit"/></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}




