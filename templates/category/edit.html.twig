{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Formulaire cat√©gorie{% endblock %}

{% block body %}
    {{ form_start(form) }}
        {% for category in form.categories %}
            <div class="d-flex gap-2 my-2">
                <div class="form-group">
                    {{ form_widget(category.position) }}
                    <div class="text-danger">{{ form_errors(category.position) }}</div>
                </div>
                <div class="form-group">
                    {{ form_widget(category.code) }}
                    <div class="text-danger">{{ form_errors(category.code) }}</div>
                </div>
                <div class="form-group">
                    {{ form_widget(category.name_fr) }}
                    <div class="text-danger">{{ form_errors(category.name_fr) }}</div>
                </div>
                <div class="form-group">
                    {{ form_widget(category.name_en) }}
                    <div class="text-danger">{{ form_errors(category.name_en) }}</div>
                </div>
            </div>
            {% endfor %}
        <a class="btn-cancel btn rounded-3" href="{{ path('app_category_list') }}">{{ 'cancel'|trans({}, 'actions') }}</a>
        <button class="btn btn-update rounded-3 align-self-start" type="submit">{{ 'save'|trans({}, 'actions') }}</button>
    {{ form_end(form) }}
{% endblock %}