{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Vue commentaires{% endblock %}

{% block body %}
    <table class="table table-responsive table-bordered w-auto">
        <tbody>
            <tr>
                <th class="table-secondary">{{ 'creation_date'|trans({}, 'comment') }}</td>
                <td>{{ comment.createdAt|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th class="table-secondary">{{ 'article'|trans({}, 'comment') }}</td>
                <td>{{ comment.article.titleFr }}</td>
            </tr>
            <tr>
                <th class="table-secondary">{{ 'pseudo'|trans({}, 'comment') }}</td>
                <td>{{ comment.pseudo }}</td>
            </tr>
            <tr>
                <th class="table-secondary">{{ 'email'|trans({}, 'comment') }}</td>
                <td>{{ comment.email }}</td>
            </tr>
            <tr>
                <th class="table-secondary">{{ 'comment'|trans({}, 'comment') }}</td>
                <td>{{ comment.comment|nl2br|raw }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn-back btn mt-2 rounded-3" href="{{ path('app_comment_list') }}">{{ 'back'|trans({}, 'actions') }}</a>
{% endblock %}




